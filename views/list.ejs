<%- include("header") -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>
<div class="box">
  <% currentItems.forEach(function(item){ %>
  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="checkbox" value="<%=item._id%>" onChange="this.form.submit()">
      <p> <%= item.name %> </p>
    </div>
    <input type="hidden" name="listName" value="<%= listTitle %>">
  </form>
  <%}) %>
  <form class="item" action="/" method="post">
    <label for="newItem">
      <input id="newItem" name="newItem" type="text" placeholder="New Item" autocomplete="off">
    </label>
    <button class="submit" type="submit" name="list" value="<%= listTitle %>">+</button>
  </form>
</div>

<%- include("footer") -%>